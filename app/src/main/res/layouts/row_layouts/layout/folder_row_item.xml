<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_micro"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_xs_large"
        android:paddingStart="@dimen/spacing_xs_large"
        android:paddingTop="@dimen/spacing_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_normal">

            <ImageView
                android:id="@+id/folderImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/folder_name"
                android:elevation="@dimen/spacing_micro"
                tools:src="@drawable/ic_fa"/>

            <com.fasty.ui.widgets.FontTextView
                android:id="@+id/folderName"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_s_large"
                android:layout_marginStart="@dimen/spacing_xs_large"
                android:layout_weight="1"
                tools:text="Folder Name"/>

            <com.fasty.ui.widgets.FontTextView
                android:id="@+id/appsCount"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacing_s_large"
                android:layout_marginStart="@dimen/spacing_xs_large"
                android:maxLines="1"
                android:textColor="?colorAccent"
                tools:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="end"
            android:orientation="horizontal">

            <com.fasty.ui.widgets.FontTextView
                android:id="@+id/delete"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/spacing_normal"
                android:text="@string/delete"
                android:textColor="#ff00"/>

            <com.fasty.ui.widgets.FontTextView
                android:id="@+id/addApps"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/spacing_normal"
                android:text="@string/apps"
                android:textColor="?colorPrimary"/>

            <com.fasty.ui.widgets.FontTextView
                android:id="@+id/editFolder"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/spacing_normal"
                android:text="@string/edit"
                android:textColor="?colorAccent"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>